<h1>Search for flights</h1>

<div class="error">
<% if @errors %>
  <% @errors.each do |err| %>
    <%= err %>
  <% end %>
<% end  %>
</div>

<%= form_for @search do |f| %>
  <div class="field">
    <%= f.label :origin %><br />
    <%= f.collection_select(:origin, @flights, :id, :state) %>
  </div>
  <div class="field">
    <%= f.label :destination %><br />
    <%= f.collection_select(:destination_state, @flights, :id, :state) %>
  </div>
  <div class="field">
    <%= f.label :departure_date, "Date Range" %><br />
    <%= f.date_field :departure_date %> -
    <%= f.date_field :return_date %>
  </div>
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>
