<h1>Search for flights</h1>

<div class="error">
<% if flash[:error] %>
  <% flash[:error].each do |err| %>
    <%= err %>
  <% end %>
<% end  %>
</div>

<%= form_for @search do |f| %>
  <div class="field">
    <%= f.label :origin %><br />
    <%= f.text_field :origin %>

    <%# <%= f.collection_select(:origin, @flights, :id, :state.to_s) %> %>
  </div>
  <div class="field">
    <%= f.label :destination %><br />
    <%= f.text_field :destination %>
    <%# <%= f.collection_select(:destination, @returnflights, :id, :destination_state.to_s) %> %>
  </div>
  <div class="field">
    <%= f.label :departure_date, "Date Range" %><br />
    <%= f.date_field :departure_date %> -
    <%= f.date_field :return_date %>
  </div>
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>
