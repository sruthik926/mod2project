<% if flash[:error] %>
  <% flash[:error].each do |err| %>
    <%= err  %>
  <% end %>
<% end  %>


<%= form_for @review, url: flight_reviews_path do |f| %>
  <%= f.label "Flight Name:" %>
  <%= f.collection_select(:flight_id, @my_flights, :id, :name) %><br>
  <%= f.label "Rating" %>
  <%= f.select :rating, [ 1, 2, 3, 4, 5] %><br>
  <%= f.label "Comment:" %><br>
  <%= f.text_area :content %><br>
  <%= f.submit "Submit Review" %>
<% end %>

<%= button_to "Back to Main", user_path(current_user), :method => :get %>
