<% if flash[:error] %>
  <% flash[:error].each do |err| %>
    <%= err  %>
  <% end %>
<% end  %>


<%= form_for @review do |f| %>
  <%= f.label "Res_ID" %>
  <%#= f.select :reservation_id, Reservation.flight.name, :selected => params[:id] %>
  <%= f.collection_select(:reservation_id, Reservation.all, :id, :id) %>
  <%= f.label "Rating" %>
  <%= f.select :rating, [ 1, 2, 3, 4, 5] %><br>
  <%= f.label "Content" %>
  <%= f.text_field :content %><br>
  <%= f.submit "Submit Review" %>
<% end %>
